{
  "name": "gpc-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  },
  "description": "CRE Underwriting Platform - IND_ACQ",
  "scripts": {
    "dev:mcp": "pnpm --filter @gpc/mcp-server dev",
    "dev:widget": "pnpm --filter @gpc/widget dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "validate:schema": "node scripts/validate-schema.mjs",
    "validate:deal-engine-fixtures": "node scripts/validate-deal-engine-fixtures.mjs",
    "ci": "pnpm validate:schema && pnpm typecheck && pnpm build"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  }
}
