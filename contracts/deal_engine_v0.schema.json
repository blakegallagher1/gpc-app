{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gpc-app/contracts/deal_engine_v0.schema.json",
  "title": "Deal Engine V0",
  "type": "object",
  "additionalProperties": false,
  "required": ["contract", "deal", "asset", "modules"],
  "properties": {
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["contract_version", "template_id", "currency", "time_step"],
      "properties": {
        "contract_version": { "const": "DEAL_ENGINE_V0" },
        "template_id": { "type": "string" },
        "currency": { "type": "string", "enum": ["USD"] },
        "time_step": { "type": "string", "enum": ["monthly", "quarterly", "annual"] }
      }
    },
    "deal": {
      "type": "object",
      "additionalProperties": false,
      "required": ["project_name", "analysis_start_date"],
      "properties": {
        "project_name": { "type": "string", "minLength": 1 },
        "address": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string", "minLength": 2, "maxLength": 2 },
        "analysis_start_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "hold_period_months": { "type": "integer", "minimum": 1 },
        "hold_period_quarters": { "type": "integer", "minimum": 1 },
        "hold_period_years": { "type": "integer", "minimum": 1 },
        "close_month": { "type": "integer", "minimum": 0, "default": 0 }
      }
    },
    "asset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["asset_class"],
      "properties": {
        "asset_class": { "type": "string", "enum": ["industrial", "retail", "multifamily", "mhp", "storage", "ios", "fund"] },
        "subtype": { "type": "string" },
        "gross_sf": { "type": "number", "minimum": 0 },
        "net_sf": { "type": "number", "minimum": 0 },
        "unit_count": { "type": "integer", "minimum": 0 },
        "lot_count": { "type": "integer", "minimum": 0 },
        "site_acres": { "type": "number", "minimum": 0 }
      }
    },
    "acquisition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["purchase_price"],
      "properties": {
        "purchase_price": { "type": "number", "minimum": 0 },
        "closing_cost_pct": { "type": "number", "minimum": 0, "maximum": 0.2 },
        "closing_cost_fixed": { "type": "number", "minimum": 0 }
      }
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lease": { "$ref": "#/$defs/LeaseModuleV0" },
        "operating": { "$ref": "#/$defs/OperatingModuleV0" },
        "capex": { "$ref": "#/$defs/CapexModuleV0" },
        "development": { "$ref": "#/$defs/DevelopmentModuleV0" },
        "debt": { "$ref": "#/$defs/DebtModuleV0" },
        "portfolio": { "$ref": "#/$defs/PortfolioModuleV0" },
        "fund": { "$ref": "#/$defs/FundModuleV0" },
        "equity": { "$ref": "#/$defs/EquityWaterfallModuleV0" },
        "exit": { "$ref": "#/$defs/ExitModuleV0" },
        "scenario": { "$ref": "#/$defs/ScenarioRunnerV0" }
      }
    },
    "ui_meta": {
      "type": "object",
      "additionalProperties": true
    }
  },

  "$defs": {
    "Money": { "type": "number" },

    "LeaseModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["commercial_rent_roll", "multifamily_unit_mix", "storage_unit_mix", "mhp_lot_rent"] },
        "tenants_in_place": {
          "type": "array",
          "items": { "$ref": "#/$defs/CommercialTenantV0" },
          "default": []
        },
        "unit_types": {
          "type": "array",
          "items": { "$ref": "#/$defs/UnitTypeV0" },
          "default": []
        },
        "lots_total": { "type": "integer", "minimum": 0 },
        "lots_occupied_initial": { "type": "integer", "minimum": 0 },
        "lot_rent_monthly_initial": { "type": "number", "minimum": 0 },
        "annual_lot_rent_growth_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "occupancy_ramp": { "$ref": "#/$defs/OccupancyRampV0" },
        "lease_up": { "$ref": "#/$defs/LeaseUpV0" },
        "market_rollover": { "$ref": "#/$defs/MarketRolloverV0" }
      }
    },

    "CommercialTenantV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tenant_name", "area", "lease_start", "lease_end", "rent_type", "base_rent"],
      "properties": {
        "tenant_id": { "type": "string" },
        "tenant_name": { "type": "string" },
        "area": {
          "type": "object",
          "additionalProperties": false,
          "required": ["unit", "value"],
          "properties": {
            "unit": { "type": "string", "enum": ["sf", "acres"] },
            "value": { "type": "number", "minimum": 0 }
          }
        },
        "lease_start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "lease_end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "rent_type": { "type": "string", "enum": ["absolute_nnn", "nnn", "gross", "modified_gross", "ground_lease"] },
        "base_rent": {
          "type": "object",
          "additionalProperties": false,
          "required": ["unit", "amount"],
          "properties": {
            "unit": { "type": "string", "enum": ["psf_annual", "total_monthly", "total_annual", "per_acre_monthly", "per_acre_annual"] },
            "amount": { "type": "number", "minimum": 0 }
          }
        },
        "annual_bump_pct": { "type": "number", "minimum": 0, "maximum": 1, "default": 0 },
        "rent_steps": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["start", "end", "rent"],
            "properties": {
              "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "rent": { "$ref": "#/$defs/CommercialTenantV0/properties/base_rent" }
            }
          },
          "default": []
        }
      }
    },

    "UnitTypeV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["unit_type_id", "name", "count", "starting_rent_monthly", "annual_rent_growth_pct"],
      "properties": {
        "unit_type_id": { "type": "string" },
        "name": { "type": "string" },
        "count": { "type": "integer", "minimum": 0 },
        "avg_sf": { "type": "number", "minimum": 0 },
        "starting_rent_monthly": { "type": "number", "minimum": 0 },
        "annual_rent_growth_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "starting_occupancy_pct": { "type": "number", "minimum": 0, "maximum": 1, "default": 1.0 },
        "stabilized_occupancy_pct": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },

    "OccupancyRampV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_month", "months_to_stabilize"],
      "properties": {
        "start_month": { "type": "integer", "minimum": 0 },
        "months_to_stabilize": { "type": "integer", "minimum": 1 }
      }
    },

    "LeaseUpV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_month", "stabilized_occupancy_pct", "absorption_units_per_month"],
      "properties": {
        "start_month": { "type": "integer", "minimum": 0 },
        "stabilized_occupancy_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "absorption_units_per_month": { "type": "number", "minimum": 0 }
      }
    },

    "MarketRolloverV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["default"],
      "properties": {
        "default": {
          "type": "object",
          "additionalProperties": false,
          "required": ["downtime_months", "new_lease_term_months"],
          "properties": {
            "market_rent_psf_annual": { "type": "number", "minimum": 0 },
            "downtime_months": { "type": "integer", "minimum": 0 },
            "renewal_probability": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.0 },
            "ti_psf": { "type": "number", "minimum": 0, "default": 0 },
            "lc_pct_of_total_rent": { "type": "number", "minimum": 0, "maximum": 1, "default": 0 },
            "leasing_commission_pct_of_total_rent": { "type": "number", "minimum": 0, "maximum": 1, "default": 0 },
            "new_lease_term_months": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },

    "OperatingModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["vacancy_pct", "credit_loss_pct", "inflation", "expenses"],
      "properties": {
        "vacancy_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "credit_loss_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "inflation": {
          "type": "object",
          "additionalProperties": false,
          "required": ["rent", "expenses", "taxes"],
          "properties": {
            "rent": { "type": "number", "minimum": 0, "maximum": 1 },
            "expenses": { "type": "number", "minimum": 0, "maximum": 1 },
            "taxes": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "other_income": {
          "type": "array",
          "items": { "$ref": "#/$defs/OtherIncomeLineV0" },
          "default": []
        },
        "expenses": {
          "type": "object",
          "additionalProperties": false,
          "required": ["fixed_annual"],
          "properties": {
            "management_fee_pct_egi": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.0 },
            "fixed_annual": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "taxes": { "type": "number", "minimum": 0, "default": 0 },
                "insurance": { "type": "number", "minimum": 0, "default": 0 },
                "cam": { "type": "number", "minimum": 0, "default": 0 },
                "utilities": { "type": "number", "minimum": 0, "default": 0 },
                "repairs_maintenance": { "type": "number", "minimum": 0, "default": 0 },
                "admin": { "type": "number", "minimum": 0, "default": 0 },
                "custom": {
                  "type": "array",
                  "items": { "$ref": "#/$defs/ExpenseLineV0" },
                  "default": []
                },
                "reserves": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["amount_year1", "growth_pct", "growth_mode"],
                  "properties": {
                    "amount_year1": { "type": "number", "minimum": 0 },
                    "growth_pct": { "type": "number", "minimum": 0, "maximum": 1 },
                    "growth_mode": { "type": "string", "enum": ["annual_compound", "flat"] }
                  }
                }
              }
            }
          }
        }
      }
    },

    "OtherIncomeLineV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "amount_annual": { "type": "number", "minimum": 0 },
        "amount_monthly": { "type": "number", "minimum": 0 },
        "growth_pct": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },

    "ExpenseLineV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "amount_year1"],
      "properties": {
        "name": { "type": "string" },
        "amount_year1": { "type": "number", "minimum": 0 },
        "growth_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "recoverable": { "type": "boolean", "default": false }
      }
    },

    "CapexModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "one_time_items": {
          "type": "array",
          "items": { "$ref": "#/$defs/CapexItemV0" },
          "default": []
        }
      }
    },

    "CapexItemV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "month", "amount", "category"],
      "properties": {
        "name": { "type": "string" },
        "month": { "type": "integer", "minimum": 0 },
        "amount": { "type": "number" },
        "category": { "type": "string", "enum": ["capex", "ti", "lc", "leasing_commission", "carry_cost", "sitework", "equipment", "other"] }
      }
    },

    "DevelopmentModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "timeline": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "construction_start_month": { "type": "integer", "minimum": 0 },
            "construction_months": { "type": "integer", "minimum": 0 },
            "lease_up_start_month": { "type": "integer", "minimum": 0 },
            "lease_up_months": { "type": "integer", "minimum": 0 },
            "stabilization_month": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },

    "DebtModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["loans"],
      "properties": {
        "loans": {
          "type": "array",
          "items": { "$ref": "#/$defs/LoanV0" },
          "minItems": 0
        },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/DebtEventV0" },
          "default": []
        }
      }
    },

    "LoanV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["loan_id", "enabled", "loan_type", "principal_mode", "rate", "term_months"],
      "properties": {
        "loan_id": { "type": "string" },
        "enabled": { "type": "boolean" },
        "loan_type": { "type": "string", "enum": ["acquisition", "construction", "refinance", "mezzanine"] },
        "principal_mode": { "type": "string", "enum": ["explicit", "sized"] },
        "principal_amount": { "type": "number", "minimum": 0 },
        "sizing": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "method": { "type": "string", "enum": ["ltv_dscr", "dscr_only", "ltv_only"] },
            "ltv_max": { "type": "number", "minimum": 0, "maximum": 1.0 },
            "dscr_min": { "type": "number", "minimum": 0 },
            "ltv_is_non_binding": { "type": "boolean", "default": false }
          }
        },
        "rate": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": { "type": "string", "enum": ["fixed", "floating"] },
            "rate": { "type": "number", "minimum": 0, "maximum": 1 },
            "index": { "type": "string" },
            "spread": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "allOf": [
            {
              "if": { "properties": { "type": { "const": "fixed" } } },
              "then": { "properties": { "rate": {} }, "required": ["rate"] }
            },
            {
              "if": { "properties": { "type": { "const": "floating" } } },
              "then": { "properties": { "index": {}, "spread": {} }, "required": ["index", "spread"] }
            }
          ]
        },
        "amort_years": { "type": "integer", "minimum": 0 },
        "io_months": { "type": "integer", "minimum": 0, "default": 0 },
        "term_months": { "type": "integer", "minimum": 1 },
        "origination_fee_pct": { "type": "number", "minimum": 0, "maximum": 0.1, "default": 0.0 },
        "interest_payment": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "mode": { "type": "string", "enum": ["standard", "current_pay_plus_pik"] },
            "current_pay_rate": { "type": "number", "minimum": 0, "maximum": 1 },
            "pik_rate": { "type": "number", "minimum": 0, "maximum": 1 },
            "pik_accrues_to_balance": { "type": "boolean", "default": false }
          }
        }
      }
    },

    "DebtEventV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "month", "loan_id"],
      "properties": {
        "type": { "type": "string", "enum": ["origination", "refinance", "payoff"] },
        "month": { "type": "integer", "minimum": 0 },
        "loan_id": { "type": "string" },
        "payoff_loan_id": { "type": "string" },
        "costs_fixed": { "type": "number", "minimum": 0 },
        "costs_pct_of_new_loan": { "type": "number", "minimum": 0, "maximum": 0.1 },
        "distribute_cash_out": { "type": "boolean", "default": true }
      }
    },

    "EquityWaterfallModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parties", "contributions", "waterfall"],
      "properties": {
        "parties": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["party_id", "name", "role", "ownership_pct"],
            "properties": {
              "party_id": { "type": "string" },
              "name": { "type": "string" },
              "role": { "type": "string", "enum": ["lp", "gp", "partner"] },
              "ownership_pct": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "contributions": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "upfront_equity": { "type": "number", "minimum": 0 },
            "capital_calls": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["month", "amount"],
                "properties": {
                  "month": { "type": "integer", "minimum": 0 },
                  "amount": { "type": "number", "minimum": 0 }
                }
              },
              "default": []
            }
          }
        },
        "waterfall": {
          "type": "object",
          "additionalProperties": false,
          "required": ["style", "tiers"],
          "properties": {
            "style": { "type": "string", "enum": ["european"] },
            "tiers": {
              "type": "array",
              "items": { "$ref": "#/$defs/WaterfallTierV0" }
            }
          }
        }
      }
    },

    "WaterfallTierV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "split"],
      "properties": {
        "type": { "type": "string", "enum": ["return_of_capital", "preferred_return", "catch_up", "irr_hurdle_split", "residual_split"] },
        "rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "hurdle_irr": { "type": "number", "minimum": 0, "maximum": 1 },
        "split": {
          "type": "object",
          "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },

    "ExitModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["exit_month", "exit_cap_rate", "sale_cost_pct", "forward_noi_months"],
      "properties": {
        "exit_month": { "type": "integer", "minimum": 0 },
        "exit_cap_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "sale_cost_pct": { "type": "number", "minimum": 0, "maximum": 0.1 },
        "forward_noi_months": { "type": "integer", "minimum": 1, "maximum": 24 }
      }
    },

    "ScenarioRunnerV0": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "grids": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "axes"],
            "properties": {
              "name": { "type": "string" },
              "axes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["path", "values"],
                  "properties": {
                    "path": { "type": "string" },
                    "values": { "type": "array", "items": { "type": "number" } }
                  }
                }
              }
            }
          },
          "default": []
        }
      }
    },

    "PortfolioModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["assets"],
      "properties": {
        "assets": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset_id", "request"],
            "properties": {
              "asset_id": { "type": "string" },
              "request": { "type": "object" },
              "weight": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    },

    "FundModuleV0": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled", "fund_terms", "fees"],
      "properties": {
        "enabled": { "type": "boolean" },
        "fund_terms": {
          "type": "object",
          "additionalProperties": false,
          "required": ["commitment_total", "investment_period_months", "fund_term_months"],
          "properties": {
            "commitment_total": { "type": "number", "minimum": 0 },
            "investment_period_months": { "type": "integer", "minimum": 1 },
            "fund_term_months": { "type": "integer", "minimum": 1 }
          }
        },
        "fees": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "management_fee_pct_invested_capital": { "type": "number", "minimum": 0, "maximum": 0.05 },
            "acquisition_fee_pct": { "type": "number", "minimum": 0, "maximum": 0.05 }
          }
        }
      }
    }
  }
}
