# Excel Engine Environment Variables
# Copy to .env and fill in your values (or export directly)

# Server configuration
PORT=5001
ASPNETCORE_URLS=http://0.0.0.0:5001

# Backblaze B2 Native API (required for cloud file storage)
# Get these from https://secure.backblaze.com/app_keys.htm
B2_KEY_ID=your_application_key_id
B2_APPLICATION_KEY=your_application_key
B2_BUCKET=your_bucket_name
B2_BUCKET_ID=your_bucket_id

# B2 Optional Configuration
# Override download URL base (defaults to B2 authorize response downloadUrl)
# B2_DOWNLOAD_URL=https://f005.backblazeb2.com

# Auth token cache TTL in seconds (default: 3600 = 1 hour)
B2_AUTH_CACHE_TTL_SECONDS=3600

# Download authorization token TTL in seconds (default: 3600 = 1 hour)
# This controls how long generated download URLs are valid
B2_DOWNLOAD_AUTH_TTL_SECONDS=3600

# EPPlus license context
EPPlus__ExcelPackage__LicenseContext=NonCommercial
